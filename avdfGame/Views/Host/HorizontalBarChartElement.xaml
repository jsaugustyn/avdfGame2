<UserControl x:Class="avdfGame.HorizontalBarChartElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:avdfGame"
             mc:Ignorable="d" Height="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Name="ElementText" Text="Test" Grid.Column="0" Width="400" TextWrapping="Wrap" Foreground="LightGray" TextAlignment="Right" Margin="0,0,20,0" FontSize="14"/>
        <Rectangle Name="baseLine" Grid.Column="1" Width="1" Fill="LightGray"/>
        <StackPanel Name="BarStack" Grid.Column="2" MinWidth="20"  Orientation="Horizontal"/>

    </Grid>
</UserControl>
